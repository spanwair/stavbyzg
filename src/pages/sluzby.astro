---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/blocks/Navbar.astro";
import Container from "../components/ui/Container.astro";
import Button from "../components/ui/Button.astro";
import Footer from "../components/blocks/Footer.astro";

import ServicesGrid from "../components/blocks/ServicesGrid.astro";
---

<Layout
  title="Stavební služby a realizace | Stavby Zapletal – Gabriel"
  description="Kompletní stavební práce: základy, zemní práce, hrubé stavby, střechy, zateplení a rekonstrukce. Profesionální přístup pro váš dům v Olomouci a okolí."
>
  <Navbar />
  <main>
    <!-- Hero Section -->
    <section
      class="pt-32 pb-16 bg-gradient-to-b from-oxford-navy to-cerulean text-honeydew"
    >
      <Container>
        <div class="max-w-3xl mx-auto text-center">
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 animate-fade-in-up"
          >
            Naše služby
          </h1>
          <p class="text-xl text-frosted-blue animate-fade-in-up stagger-1">
            Kompletní stavební služby od základů po střechu
          </p>
        </div>
      </Container>
    </section>

    <!-- Services Grid -->
    <ServicesGrid />

    <!-- CTA Section -->
    <section
      class="py-20 bg-gradient-to-r from-oxford-navy to-cerulean text-honeydew"
    >
      <Container>
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Máte projekt? Pojďme ho zrealizovat společně
          </h2>
          <p class="text-xl text-frosted-blue mb-8">
            Kontaktujte nás pro nezávaznou konzultaci a cenovou nabídku
          </p>
          <Button variant="secondary" size="lg" href="/kontakt">
            Kontaktovat nás
          </Button>
        </div>
      </Container>
    </section>
  </main>
  <Footer />
</Layout>
