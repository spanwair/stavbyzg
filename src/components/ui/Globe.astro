---
// Animated Globe SVG Component
---

<div class="globe-container">
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    viewBox="0 0 800 800" 
    class="globe-svg"
  >
    <defs>
      <radialGradient id="globe-gradient" cx="50%" cy="50%" r="50%">
        <stop offset="0%" style="stop-color:var(--cerulean);stop-opacity:0.3" />
        <stop offset="100%" style="stop-color:var(--oxford-navy);stop-opacity:0.1" />
      </radialGradient>
    </defs>
    
    <!-- Globe circles -->
    <circle cx="400" cy="400" r="300" fill="url(#globe-gradient)" class="globe-circle" />
    <circle cx="400" cy="400" r="250" fill="none" stroke="var(--frosted-blue)" stroke-width="1" opacity="0.3" class="globe-ring" />
    <circle cx="400" cy="400" r="200" fill="none" stroke="var(--frosted-blue)" stroke-width="1" opacity="0.4" class="globe-ring" style="animation-delay: 0.5s" />
    <circle cx="400" cy="400" r="150" fill="none" stroke="var(--cerulean)" stroke-width="1.5" opacity="0.5" class="globe-ring" style="animation-delay: 1s" />
    
    <!-- Meridians -->
    <ellipse cx="400" cy="400" rx="300" ry="100" fill="none" stroke="var(--frosted-blue)" stroke-width="0.5" opacity="0.2" class="meridian" />
    <ellipse cx="400" cy="400" rx="300" ry="200" fill="none" stroke="var(--frosted-blue)" stroke-width="0.5" opacity="0.2" class="meridian" style="animation-delay: 0.3s" />
    <ellipse cx="400" cy="400" rx="100" ry="300" fill="none" stroke="var(--frosted-blue)" stroke-width="0.5" opacity="0.2" class="meridian" style="animation-delay: 0.6s" />
    <ellipse cx="400" cy="400" rx="200" ry="300" fill="none" stroke="var(--frosted-blue)" stroke-width="0.5" opacity="0.2" class="meridian" style="animation-delay: 0.9s" />
    
    <!-- Dots representing locations -->
    <circle cx="450" cy="350" r="3" fill="var(--light-bronze)" opacity="0.8" class="location-dot" />
    <circle cx="380" cy="420" r="3" fill="var(--light-bronze)" opacity="0.8" class="location-dot" style="animation-delay: 0.2s" />
    <circle cx="520" cy="450" r="3" fill="var(--light-bronze)" opacity="0.8" class="location-dot" style="animation-delay: 0.4s" />
    <circle cx="320" cy="380" r="3" fill="var(--light-bronze)" opacity="0.8" class="location-dot" style="animation-delay: 0.6s" />
  </svg>
</div>

<style>
  .globe-container {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .globe-svg {
    width: 100%;
    height: 100%;
    max-width: 600px;
    max-height: 600px;
    opacity: 0.4;
  }

  .globe-circle {
    animation: pulse 4s ease-in-out infinite;
  }

  .globe-ring {
    animation: rotate 20s linear infinite;
    transform-origin: center;
  }

  .meridian {
    animation: rotate 30s linear infinite reverse;
    transform-origin: center;
  }

  .location-dot {
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @media (max-width: 768px) {
    .globe-svg {
      max-width: 400px;
      max-height: 400px;
    }
  }
</style>
