---
import Globe from "../ui/Globe.astro";
import ContactForm from "./ContactForm.astro";
import company from "../../data/company.json";

const sections = [
  {
    title: "Služby",
    links: [
      { name: "Základy a hrubá stavba", href: "/sluzby#zaklady" },
      { name: "Střechy a krovy", href: "/sluzby#strechy" },
      { name: "Rekonstrukce", href: "/sluzby#rekonstrukce" },
      { name: "Zateplení fasád", href: "/sluzby#zatepleni" },
    ],
  },
  {
    title: "O společnosti",
    links: [
      { name: "O nás", href: "/o-nas" },
      { name: "Náš tým", href: "/o-nas#tym" },
      { name: "Reference", href: "/realizace" },
      { name: "Kariéra", href: "/o-nas#kariera" },
    ],
  },
  {
    title: "Zdroje",
    links: [
      { name: "Kontakt", href: "/kontakt" },
      { name: "Často kladené otázky", href: "/faq" },
      { name: "Blog", href: "/blog" },
    ],
  },
];

const currentYear = new Date().getFullYear();
---

<footer
  class="relative bg-gradient-to-br from-cerulean/10 via-frosted-blue/20 to-oxford-navy/10 pt-20 pb-8"
>
  <div class="container">
    <!-- Main Footer Content -->
    <div class="grid gap-12 lg:grid-cols-2 mb-16">
      <!-- Company Info & Contact Form -->
      <div class="space-y-8">
        <div>
          <div class="flex items-center gap-2 mb-4">
            <img
              src="/logo.png"
              alt={company.name}
              class="h-12 w-auto md:hidden bg-primary-foreground p-[10px] rounded-[10px]"
            />
            <h2 class="text-2xl font-semibold md:block">
              {company.fullName}
            </h2>
          </div>
          <p class="text-muted-foreground max-w-md">
            {company.description}
          </p>
        </div>

        <!-- Contact Info -->
        <div class="space-y-6">
          <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-1">
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-secondary mt-1"
                >
                  <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                  ></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                <div class="text-sm">
                  <p class="font-semibold mb-1">Adresa</p>
                  <p class="text-muted-foreground">
                    {company.name}<br />
                    {company.address.street}, {company.address.zip}
                    {company.address.city}
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-secondary mt-1"
                >
                  <path
                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                  ></path>
                </svg>
                <div class="text-sm">
                  <p class="font-semibold mb-1">Telefon</p>
                  <p class="text-muted-foreground">
                    {
                      company.phones.map((phone, index) => (
                        <>
                          {phone}
                          {index < company.phones.length - 1 ? <br /> : null}
                        </>
                      ))
                    }
                  </p>
                </div>
              </div>
            </div>

            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-secondary mt-1"
                >
                  <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                  <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                </svg>
                <div class="text-sm">
                  <p class="font-semibold mb-1">E-mail</p>
                  <p class="text-muted-foreground">
                    {
                      company.emails.map((email, index) => (
                        <>
                          <a
                            href={`mailto:${email}`}
                            class="hover:text-secondary transition-colors"
                          >
                            {email}
                          </a>
                          {index < company.emails.length - 1 ? <br /> : null}
                        </>
                      ))
                    }
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-secondary mt-1"
                >
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <div class="text-sm">
                  <p class="font-semibold mb-1">Pracovní doba</p>
                  <p class="text-muted-foreground text-xs leading-relaxed">
                    {company.workingHours.weekdays}<br />
                    {company.workingHours.saturday}, {
                      company.workingHours.sunday
                    }
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Map Integration -->
          <div
            class="rounded-xl overflow-hidden h-48 bg-accent/50 border border-border flex items-center justify-center relative group"
          >
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4477.566145403351!2d17.17715418421351!3d49.5867381090032!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47124f914b722053%3A0xb794ebb07160b2c9!2sU%20Par%C4%8D%C3%ADku%2047%2F24%2C%20779%2000%20Olomouc%209-Topolany!5e0!3m2!1scs!2scz!4v1768197150272!5m2!1scs!2scz"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              class="grayscale opacity-80 hover:grayscale-0 hover:opacity-100 transition-all duration-500"
            ></iframe>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div>
        <ContactForm />
      </div>
    </div>

    <!-- Separator -->
    <div class="border-t border-border my-8"></div>

    <!-- Footer Links -->
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4 mb-12">
      {
        sections.map((section) => (
          <div>
            <h3 class="font-semibold mb-4">{section.title}</h3>
            <ul class="space-y-2 text-sm text-muted-foreground">
              {section.links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="hover:text-secondary transition-colors"
                  >
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }

      <!-- Social Media -->
      <div>
        <h3 class="font-semibold mb-4">Sledujte nás</h3>
        <div class="flex gap-3">
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-accent flex items-center justify-center hover:bg-secondary hover:text-primary-foreground transition-colors"
            aria-label="Facebook"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path>
            </svg>
          </a>
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-accent flex items-center justify-center hover:bg-secondary hover:text-primary-foreground transition-colors"
            aria-label="Instagram"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
            </svg>
          </a>
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-accent flex items-center justify-center hover:bg-secondary hover:text-primary-foreground transition-colors"
            aria-label="LinkedIn"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Globe Background -->
    <div class="relative h-52 overflow-hidden lg:h-82 -mx-6">
      <Globe />
    </div>

    <!-- Copyright -->
    <div class="text-center text-sm text-muted-foreground pt-8">
      <p>&copy; {currentYear} {company.name}. Všechna práva vyhrazena.</p>
    </div>
  </div>
</footer>
