---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/blocks/Navbar.astro";
import Container from "../components/ui/Container.astro";
import Footer from "../components/blocks/Footer.astro";
import company from "../data/company.json";
---

<Layout
  title="Kontakt a poptávka | Stavby Zapletal – Gabriel"
  description="Kontaktujte nás pro nezávaznou konzultaci a cenovou nabídku na vaše stavební práce v Olomouci a okolí. Jsme tu pro vás."
>
  <Navbar />
  <main>
    <!-- Hero Section -->
    <section
      class="pt-32 pb-16 bg-gradient-to-b from-oxford-navy to-cerulean text-honeydew"
    >
      <Container>
        <div class="max-w-3xl mx-auto text-center">
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 animate-fade-in-up"
          >
            Kontaktujte nás
          </h1>
          <p class="text-xl text-frosted-blue animate-fade-in-up stagger-1">
            Rádi vám pomůžeme s vaším stavebním projektem
          </p>
        </div>
      </Container>
    </section>

    <!-- Company Info -->
    <section class="py-20 bg-frosted-blue/10">
      <Container>
        <div class="max-w-3xl mx-auto">
          <h2 class="text-2xl font-bold mb-6 text-center">Firemní údaje</h2>
          <div class="grid md:grid-cols-2 gap-6 text-sm">
            <div>
              <p class="font-semibold mb-1">Obchodní název:</p>
              <p class="text-muted-foreground">{company.name}</p>
            </div>
            <div>
              <p class="font-semibold mb-1">IČO:</p>
              <p class="text-muted-foreground">{company.registration.ico}</p>
            </div>
            <div>
              <p class="font-semibold mb-1">DIČ:</p>
              <p class="text-muted-foreground">{company.registration.dic}</p>
            </div>
            <div>
              <p class="font-semibold mb-1">Zapsáno:</p>
              <p class="text-muted-foreground">{company.registration.court}</p>
            </div>
          </div>
        </div>
      </Container>
    </section>
  </main>
  <Footer />
</Layout>
